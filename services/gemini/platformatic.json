{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.5.2.json",
  "db": {
    "connectionString": "{PLT_GEMINI_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_GEMINI_APPLY_MIGRATIONS}"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes"
      }
    ],
    "typescript": "{PLT_GEMINI_TYPESCRIPT}"
  },
  "types": {
    "autogenerate": true
  }
}